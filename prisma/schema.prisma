generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Nature {
  id Int @default(autoincrement()) @id
  name String @unique
  increase PokemonStatusEnum?
  decrease PokemonStatusEnum?
  @@map("natures")
}

model Ability {
  id Int @default(autoincrement()) @id
  name String
  description String
  @@map("abilities")
}

model Type {
  id Int @default(autoincrement()) @id
  name String
  @@map("types")
}

enum PokemonStatusEnum {
  ATK
  DEF
  SPA
  SPD
  SPE
}